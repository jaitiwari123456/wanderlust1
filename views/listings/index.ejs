<% layout("/layouts/boilerplate") %>
<body>
     <h2>All Listing</h2>
     <!-- <form action="/Listing/new" method="GET">
      <button>create new Listing
      </button>
     </form> -->
     <div class="row row-cols-lg row-cols-lg-3   row-cols-md-2 row-cols-sm-1 g-4"> 
        <%for(let listing of allisting){%>
          <a href="/Listing/<%=listing._id%>" class="listing-link">
        <div class="card col" style="width:18rem">
         <img src="<%=listing.image%>" class="card-img-top" alt="Listing_image" style="height:18rem">
         <div class="card-img-overlay">
          <h5 class="card-title"></h5>
        </div>
         <div class="card-body">
           <p class="card-text"><b><%=listing.title%></b><br>
             &#8377;<%=listing.price.toLocaleString("en-IN")%>/night</p>
         </div>
       </div>
      </a>
       <%}%>  

   </div> 
</body> 
